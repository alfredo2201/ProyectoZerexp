<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".ContrasenaActivity">

    <ImageButton
        android:id="@+id/btn_regresar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@mipmap/boton_regresar"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginVertical="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_blanco"
        />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTABLECER\nCONTRASEÃ‘A"
        android:textSize="23dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="25dp"
        android:textColor="@color/white"
        android:fontFamily="@font/insanibc_1"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_contra_Restablecer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/round_edit_text"
            android:hint="@string/email"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/dark_blue"
            android:inputType="textEmailAddress"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_restablecer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            android:fontFamily="@font/segoe_ui_symbol"
            android:text="Enviar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13dp"
            />

    </LinearLayout>

</LinearLayout>