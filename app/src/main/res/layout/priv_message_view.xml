<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_other_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            android:src="@drawable/icono_usuario_azul_gra"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/priv_message_round">

            <TextView
                android:id="@+id/tv_de_priv_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mensaje..."
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:paddingStart="10dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/priv_message_round">

            <TextView
                android:id="@+id/tv_mi_priv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mensaje..."
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:paddingStart="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>