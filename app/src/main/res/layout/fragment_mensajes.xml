<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back_pf"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="r" />

        <TextView
            android:id="@+id/txt_chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textSize="16sp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/burger"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="s" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/lv_mensajes_priv"
            android:layout_width="match_parent"
            android:layout_height="600dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="10dp">

        <EditText
            android:id="@+id/et_message_priv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_enviar_priv"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_edit_text"
            android:fontFamily="@font/segoe_ui_symbol"
            android:hint="Escribir mensaje..." />

        <Button
            android:id="@+id/btn_enviar_priv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/round_button_feed"
            android:drawableEnd="@drawable/boton_next"
            android:fontFamily="@font/segoe_ui_symbol"
            android:text="Enviar"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>