<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txtChats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/insanibc_1"
        android:gravity="center"
        android:text="Chats"
        android:textColor="@color/dark_blue"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lv_mensajes_priv"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:divider="@null"
        android:stackFromBottom="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/et_message_priv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_enviar_priv"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/dark_blue"
            android:background="@drawable/round_et_mensajes"
            android:fontFamily="@font/segoe_ui_symbol"
            android:hint="Escribir mensaje..."
            android:textColor="@color/dark_blue" />

        <Button
            android:id="@+id/btn_enviar_priv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/round_button_feed"
            android:drawableEnd="@drawable/boton_next"
            android:fontFamily="@font/segoe_ui_symbol"
            android:text="Enviar"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>