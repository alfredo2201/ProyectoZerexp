<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrearCV2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_regresar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:text="IC" />

        <SearchView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="start" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear CV"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paso 2"
        android:textSize="20sp"
        android:layout_marginHorizontal="25dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Educación"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:padding="8dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="Grado académico..."
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="Área de estudio o especialización..."
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="Institución educativa..."
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="Ciudad..."
            android:minHeight="48dp"
            android:padding="8dp"
            android:textColorHint="@color/purple_700"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:hint="Del mes..."
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColorHint="@color/purple_700"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:hint="Año..."
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColorHint="@color/purple_700"
                android:textSize="12sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:hint="Al mes..."
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColorHint="@color/purple_700"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:hint="Año..."
                android:minHeight="48dp"
                android:padding="8dp"
                android:textColorHint="@color/purple_700"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="end"
            android:layout_marginVertical="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Continuar"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/btn_continuar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginVertical="80dp"
                android:layout_gravity="end"
                android:text=">" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>