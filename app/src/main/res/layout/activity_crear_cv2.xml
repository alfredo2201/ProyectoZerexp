<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CrearCV2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/background_shadow"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_regresar_cv2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/boton_regresar"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:background="@drawable/buscador_feed">

            <EditText
                android:id="@+id/et_buscar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Buscador..."
                android:background="@android:color/transparent"
                android:textColorHint="@color/dark_blue"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/btn_buscar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_search_dark_icon"
                android:background="@android:color/transparent"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/img_barra_cv2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_baseline_menu_24"
            android:backgroundTint="@color/dark_blue"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/insanibc_1"
        android:gravity="center_horizontal"
        android:text="Crear CV"
        android:textColor="@color/dark_blue"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/insanibc_1"
        android:gravity="center_horizontal"
        android:text="Paso 2"
        android:textColor="@color/dark_blue"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="@drawable/background_round"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/insanibc_1"
                android:padding="8dp"
                android:text="Educación"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txt_grado_cv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/round_edit_text"
                android:hint="Grado académico..."
                android:minHeight="48dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_area_estudio_cv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/round_edit_text"
                android:hint="Área de estudio o especialización..."
                android:minHeight="48dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_institucion_cv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/round_edit_text"
                android:hint="Institución educativa..."
                android:minHeight="48dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_ciudad_inst_cv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/round_edit_text"
                android:hint="Ciudad..."
                android:minHeight="48dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/dark_blue"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_mes_inicio_cv"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/round_edit_text"
                    android:hint="Del mes..."
                    android:minHeight="48dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txt_anio_inicio_cv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/round_edit_text"
                    android:hint="Año..."
                    android:minHeight="48dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_mes_fin_cv"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/round_edit_text"
                    android:hint="Al mes..."
                    android:minHeight="48dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txt_anio_fin_cv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/round_edit_text"
                    android:hint="Año..."
                    android:minHeight="48dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/dark_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="10dp"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/segoe_ui_symbol"
                    android:text="Continuar"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_continuar_cv2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/boton_next"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>