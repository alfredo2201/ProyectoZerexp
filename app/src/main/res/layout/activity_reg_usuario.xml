<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegUsuarioActivity">

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:text="r" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars"
        />
    <TextView
        android:id="@+id/txt_registrarse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="REGISTRARSE"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        />
    <EditText
        android:id="@+id/et_reg_nombre_usuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nombre de usuario..."/>
    <EditText
        android:id="@+id/et_reg_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Correo Electrónico..."/>
    <EditText
        android:id="@+id/et_reg_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Contraseña..."/>
    <EditText
        android:id="@+id/et_reg_repeat_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Contraseña..."/>
    <EditText
        android:id="@+id/et_reg_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ubicación..."/>
    <EditText
        android:id="@+id/et_reg_profession"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Profesión..."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginHorizontal="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Continuar"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="c" />
    </LinearLayout>

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Al hacer clic en Continuar, aceptas las Condiciones de uso, la Pólitica de privacidad y la Pólitica de cookies de Zerexp"
        android:textAlignment="center"
        android:textSize="10dp" />
</LinearLayout>