<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FeedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_regresar_feed"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@color/white"
                android:src="@drawable/ic_search_dark_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/buscador_feed">

                <EditText
                    android:id="@+id/et_buscar"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Buscador..."
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/dark_blue"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageButton
                    android:id="@+id/btn_buscar"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_search_dark_icon"
                    android:background="@android:color/transparent"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!--
            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation_view"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:backgroundTint="@color/dark_blue"
                />
            -->
            <androidx.drawerlayout.widget.DrawerLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/dwl_side_bar"
                android:fitsSystemWindows="true">
                <!--
                <androidx.fragment.app.FragmentContainerView
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:id="@+id/nav_host_fragment_side"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/nav_graph_side" />
                -->

                <com.google.android.material.navigation.NavigationView
                    android:id="@+id/nav_view_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:menu="@menu/side_menu"
                    android:background="@drawable/round_nav_side"
                    app:itemTextColor="@color/white"
                    app:itemIconTint="@color/white">

                    <ImageView
                        android:layout_marginTop="500dp"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logo_blanco"/>

                </com.google.android.material.navigation.NavigationView>

            </androidx.drawerlayout.widget.DrawerLayout>
            <Button
                android:id="@+id/siteDrawerMenuButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_menu_24"
                android:backgroundTint="@color/dark_blue"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="FEED DE INICIO"
            android:textAlignment="center"
            android:fontFamily="@font/insanibc_1"
            android:textSize="25sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Encuentra el empleo adecuado\n para ti o publica tu anuncio de empleo para que lo vean millones de personas."
            android:fontFamily="@font/segoe_ui_symbol"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btn_crear_curriculum"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:text="Crear\nCurriculim Vitae"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:background="@drawable/round_button_feed"
                android:fontFamily="@font/segoe_ui_symbol"
                android:textColor="@color/white"
                android:layout_marginRight="25dp"
                />
            <Button
                android:id="@+id/btn_publicar_empleo"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:text="Publicar\nEmpleo"
                android:textAllCaps="false"
                android:background="@drawable/round_button_feed"
                android:textColor="@color/white"
                android:fontFamily="@font/segoe_ui_symbol"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="BUSQUEDAS SUGERIDAS"
            android:fontFamily="@font/insanibc_1"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gv_busquedas"
            android:layout_weight="7.2"
            android:numColumns="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            >
        </GridView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:text="NUEVOS USUARIOS Y EMPRESAS"
            android:textAlignment="center"
            android:fontFamily="@font/insanibc_1"
            android:textSize="15sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Conecta con personas que te pueden ayudar, y encuentra el trabajo ideal para ti"
            android:fontFamily="@font/segoe_ui_symbol"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="15sp" />


        <HorizontalScrollView
            android:id="@+id/lista_nuevos_usuarios"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <ListView
               android:id="@+id/lista_nu_users"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
           </ListView>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/lista_nuevos_empleos"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/lista_nu_empleo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </ListView>
        </HorizontalScrollView>


        </LinearLayout>


</ScrollView>