<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_side.xml"
    app:startDestination="@id/feed_main">
    <fragment
        android:id="@+id/feed_main"
        android:name="purple.team.zerexp.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/opt_mensajes"
            app:destination="@id/mobile_navigation" />
    </fragment>
    <fragment
        android:id="@+id/opt_vacantes"
        android:name="purple.team.zerexp.VacantesFragment"
        android:label="fragment_vacantes"
        tools:layout="@layout/fragment_vacantes" />
    <fragment
        android:id="@+id/opt_fav"
        android:name="purple.team.zerexp.FavoritosFragment"
        android:label="fragment_favoritos"
        tools:layout="@layout/fragment_favoritos" />
    <include app:graph="@navigation/mobile_navigation" />
</navigation>